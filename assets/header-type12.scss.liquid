.header-container.type12{
  border: 0; 
  &.sticky-header {
    .header-wrapper { 
      .main-nav.container {
        margin: 0 auto; 
      }
      .main-nav .main-top-nav { 
        .top-navigation  {
          padding-right: 50px;
        }
      }
    }
  }
  .header { 
    display: block;
    vertical-align: middle;
    padding: 28px 0;
    .site-logo {
      float: left;
      .logo {
        display: block;
        padding: 0 15px;
        margin: 0 10px 0 0;
      }
    }
    .custom-block {
      display: inline-block;
      text-align: center;
      height: 40px;
      line-height: 40px;
      div >* {
        display: inline-block;
        vertical-align: middle;
      }
      span.split {
        height: 14px;
        width: 1px;
        border-right: 1px solid #ccc;
        margin: 0 13px;
      }
      a {
        font-size: 12px;
        color: inherit;
      }
    }
  }  
  .top-select:first-child > a {
    padding-left: 0;
  }  
  .cart-area {
    position: relative;
    top: 0;
    margin: 0;
    float: right;
    height: 50px;
    right: 0;
    padding: 0;
  }
  .mini-cart {
    display: inline-block;
    position: relative;
    padding: 0;
    margin: 0;
    vertical-align: middle;
    top: 0;
    left: 0;
    margin-right: 15px;
    .icon-cart-header {
      position: relative;
      padding: 0; 
      text-align: center;  
      height: auto;
      line-height: 50px;
      i {
        font-size: 18px;
        vertical-align: top;
      }
      .cart-total {
        vertical-align: inherit;
      }
    }
  } 
  .search-area {
    position: relative;
    margin: 0;
    display: block;
    float: right;
    top: 0;
    left: 0;
    height: 50px;
    z-index: 2;
    margin-right: 10px;
    .search-icon {
      display: block;
      line-height: 50px;
    } 
  }
  .header-wrapper {
    border: 0;
    padding: 10px 0;
  } 
  .main-nav { 
    margin: 0;
    height: 30px;
    .main-top-nav {
      border-radius: 0; 
    } 
    ul.top-navigation {  
      padding-right: 120px;
      >li {
        >a {
          padding-top: 9px;
          padding-bottom: 9px;
        } 
        &.fl-right {
          margin-right: 0;
          margin-left: 3px; 
        } 
      }
    }
  }
}
@media (max-width: 991px){   
  .header-container.type12 {
    .menu-icon {
      display: block;
      float: right;
      height: 50px;
      line-height: 50px;
      padding: 0;
      margin: 0 15px 0 20px;
    }
    .cart-area {
      position: static;
      float: right;
    }
    .search-area {
      float: right;
    } 
  } 
}