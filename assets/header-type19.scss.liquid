.header-container.type19{  
  border: 0; 
  &.sticky-header {
    .header-wrapper { 
      position: fixed;
      left: 0;
      top: 0;
      z-index: 8;
      margin: 0;
      .main-nav.container {
        margin: 0 auto; 
      }
      .main-nav {
        width: 100%;
        > .container {
          width: 100%!important;
          padding: 0 15px;
        }
        .main-top-nav { 
          padding: 0;
        } 
      } 
      .main-nav {
        .mini-cart {
          .icon-cart-header {            
            i {
              font-size: 25px;
              line-height: 30px;
              color: #fff !important;
              &:before {
                content: '\e87f';
              }
            }
            .cart-total .cart-qty {
              color: #000;
              right: 2px;
              font-size: 10px;
              color: #fff;
              border-radius: 20px !important;
            }
            &:after{
              content: none;
            }
          }
        }
      }
    }
  } 
  .top-links-area {
    display: inline-block;
    vertical-align: middle;
    float: none;
    margin-right: 4px;
  }
  .top-links-icon {
    border-radius: 2px; 
    display: block; 
    a{ 
      font-family: 'Poppins';
      font-weight: 500;
      font-size: 13px;
    }
  }
  .header { 
    text-align: center;
    .logo {
      margin: 20px 0;
      position: relative;
      z-index: 10;
      display: inline-block;
    } 
  } 
  .header-right-area {
    text-align: right;
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -14px;
    margin-bottom: 0;
    z-index: 11;
    >div {
      display: inline-block;
      margin-right: 12px;
    }
  } 
  .custom-block{
    font-family: 'Poppins';
    font-weight: 400;
    display: inline-block;
    text-align: left;
    font-size: 16px;
    height: 33px;
    line-height: 1; 
    padding-left: 10px;
    span{
      font-family: 'Poppins';
      font-size: 16px;
      font-weight: 400;
      line-height: 33px;
    }
  }
  .cart-area { 
    border-left: solid 1px rgba(255,255,255,0.3);
    display: block;
    position: relative;
    display: inline-block;
    height: auto;
    margin: 0;
    margin-left: 30px;
  }
  .mini-cart {    
    position: relative;
    margin: 0;
    display: inline-block;
    vertical-align: middle;
    left: 0;
    top: 0;
    margin-left: 15px;    
    .icon-cart-header { 
      i {
        font-size: 23px; 
      } 
    }
  } 
  .search-area {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin: 0;
    height: 25px;
    width: 25px;
    line-height: 25px;
    text-align: center;
    margin-left: 15px;
    left: 0;
    top: 0;
    z-index: 5; 
    .search-icon i:before {
      content: '\e884';
      font-size: 16px;
      font-weight: 600;
    }
  }
  .menu-icon {
    display: none;
    padding: 0;
    margin: 0;
    height: auto;
    margin-right: 1px;
    margin-left: 10px;
    a {
      color: #fff;
    }
  }
  .header-wrapper {
    border: 0;
    display: block;
    margin: 0;
    margin-top: -16px;
    z-index: 9;
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
  } 
  .main-nav { 
    margin: 0; 
    > .container {
      width: auto!important;
      padding: 0;
    }
    .main-top-nav {
      background-color: transparent;
      padding: 0 53% 0 20px;
    } 
    .main-navigation {
      position: static; 
    }
    ul.top-navigation { 
      >li {
        >a {
          padding: 10px;
          font-weight: 500;
          font-size: 13px;
          font-family: 'Poppins';
          letter-spacing: 0.025em;
          padding-top: 15px;
          padding-bottom: 16px;
        } 
        &.fl-right {
          margin-right: 0;
          margin-left: 3px; 
        }
        &.parent {
          > a {
            padding-right: 25px;
            &:after {
              right: 8px;
            }
            &:before{
              content: "";
              width: 10px;
              height: 10px;
              border: 7px solid transparent;
              position: absolute;
              left: 50%;
              margin-left: -8px;
              top: 100%;
              margin-top: -14px;
              visibility: hidden;
              opacity: 0;
              transition: all 0.1s;
            }

          }
          &:hover > a:before{
            visibility: visible;
            opacity: 1;
          }
        } 
        &.level0{
          ul li.groups{
            > a{
              font-size: 13px;
              font-weight: 700;
              margin-top: 26px;
              margin-bottom: 9px;
              line-height: 1.5;
              text-transform: uppercase;
            }
            .menu-wrapper{
              ul.level1{
                li.level2{
                  > a{
                    float: left;
                    padding: 5px;
                    margin: 0 8px 0 8px;
                    font-size: 12px;
                    font-weight: 600;
                    line-height: 24px;
                    text-transform: uppercase;
                    span{
                      float: none;
                      line-height: 24px;
                    }
                  }
                }
              }
            }  
          }
        }
        &.static-dropdown{
          > a:before{
            content: "";
            width: 10px;
            height: 10px;
            border: 7px solid transparent;
            border-bottom-color: #fff;
            position: absolute;
            left: 50%;
            margin-left: -8px;
            top: 100%;
            margin-top: -14px;
            visibility: hidden;
            opacity: 0;
            transition: all 0.1s;
          }
          &:hover > a:before{
            visibility: visible;
            opacity: 1;
          }
        } 
      }
    }
  }
  .switcher-area {
    display: inline-block;
    vertical-align: middle;
    .split {
      display: none;
    }
  }
  .currency-wrapper, .language-wrapper, .compare-link {
    display: inline-block;
    vertical-align: middle;
    float: none;
    margin-right: 4px;
    border-radius: 3px;
    border-color: transparent;
    background-color: transparent; 
    text-align: center;
    > a{
      font-size: 13px;
      font-family: 'Poppins';
      font-weight: 500;
    }
    ul{
      li{
        a{
          font-weight: normal;
          font-size: 11px;
        }
      }
    }
  }
}
@media (max-width: 1279px){
  .header-container.sticky-header.type19 {
    background-color: #555;
  }
  .header-container.type19 {
    .header {
      text-align: left;
      .logo {
        margin: 20px 25px;
        z-index: 12;
      }
    }
    .header-wrapper {
      display: none;
    }
    .menu-icon {
      display: inline-block;
      margin-left: 18px;
      z-index: 12;
      position: relative;
    }
  } 
}
@media (max-width: 767px) {
  .header-container.type19 {
    .custom-block {
      display: none;
    }
    .cart-area {
      border: none;
      margin-left: 5px;
    }
    .header-right-area>div {margin: 0;}
    .search-area.show-icon .search-extended {
      width: 350px;
      right: -97px;
      &:before {right: 97px;}
    }
  }
}