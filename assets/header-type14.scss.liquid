.header-container.type14{
  .template-index & { 
    &:not(.sticky-header){
      position: absolute;
      background-color: transparent;
      z-index: 9;
      top: 0 !important;
      left: 0;
      right: 0;
      margin: 0 auto; 
    }
  }
  .top-navigation li.level0.parent a.level-top:after {
    content: '\e81a';
    font-family: "porto";
    position: absolute;
    width: 10px;
    height: 10px;
    top: 56%;
    right: 0px;
    left: auto;
    margin-top: -6.5px;
  }
  .icon-search:before {
    content: "\e872";
    margin: 0;
  }
  border: 0; 
  &.sticky-header {
    position: fixed;
    width: 100%;
    z-index: 7;  
  }  
  .top-links-area {
    float: none;
    display: inline-block; 
    a {
      padding-top: 5px;
      padding-bottom: 5px;
    }
  } 
  .links {
    float: none;
    display: inline-block; 
    vertical-align: middle;
    li {
      padding: 0 10px;
      border: 0;
      font-size: 11px;
      font-weight: 600;
      letter-spacing: 2px;
      &.first {
        padding-left: 0;
      } 
    }
  } 
  .header {  
    display: block;
    vertical-align: middle;
    padding: 25px 85px; 
    .site-logo {
      float: left;
      .logo { 
        display: block;
        padding: 0 15px;
        margin: 0 10px 0 0;
      }
      img {
        max-height: 50px;
      }
    } 
    .custom-block {
      display: inline-block;
      text-align: center;
      margin-left: 15px;
    }
    &.container {width: 100%;}
  } 
  .cart-area {
    right: 100px;
  }
  .menu-area {
    display: inline-block;
    vertical-align: middle;
    position: relative;
    .menu-icon { 
      height: auto; 
      padding: 0;
      margin: 0;
    }
    > a { 
      margin-right: 20px;
      text-transform: uppercase;
      font-weight: 600;
      font-size: 11px;
      letter-spacing: 2px;
      line-height: 40px;
    }
    &:hover {
      .header-wrapper {
        visibility: visible;
        opacity: 1;
      }
    }
  }
  .header-wrapper {
    background-color: #fff;
    border-radius: 0;
    padding: 5px 0;
    border: 0;
    position: absolute !important;
    left: -15px;
    top: auto !important;
    visibility: hidden;
    opacity: 0;
    transition: all .3s;
    z-index: 4;
  }
  .main-nav { 
    min-width: 170px; 
    > .container {
      padding: 0;
      width: 100%;
    }
    .main-top-nav { 
      border-radius: 5px;
      padding: 5px 0;
    }
    .top-navigation {
      > li {
        display: block;
        margin: 0;
        position: relative;
        float: none;
        .menu-wrap-sub{
          left: 100% !important;
          top: 0;
        }
        >a {
          font-size: 11px;
          font-weight: 400; 
          padding: 10px 30px 10px 5px;
          text-transform: none;
          margin: 0 8px !important; 
          color: #777 !important;
        }
        &:hover {
          > a {background-color: #f4f4f4;}
        }
      }
    }
  } 
  .shoppingcart-area {
    display: inline-block;
    vertical-align: middle;
    font-weight: 600;
    position: relative;
    right: 0;
    top: 0;
    margin: 0;
    line-height: 33px;
  }
  .mini-cart {    
    display: inline-block;
    position: relative;
    top: 0;
    left: 0;
    right: auto;
    padding: 0;
    margin: 0;
    vertical-align: middle;
    border-radius: 3px;
    margin-bottom: 5px;
    .icon-cart-header { 
      position: relative; 
    }
  } 
  .search-area {
    position: relative;
    margin: 0 40px;
    display: inline-block;
    top: 0;
    left: 0;
    height: 40px;
    z-index: 5;
    .search-icon {
      line-height: 40px; 
      font-size: 20px;
    }  
  }  
  .switcher-area {
    display: inline-block;
    vertical-align: middle;
    font-weight: 600;
    .split {
      display: none;
    }
  }
  .currency-wrapper .icon-down-dir:before, .language-wrapper .icon-down-dir:before {
    content: '\e81c';
  }
  .currency-wrapper, .language-wrapper, .compare-link {
    display: inline-block;
    vertical-align: middle;
    float: none; 
    margin-right: 5px;
    > a {
      border-color: transparent;
      color: #fff;
      text-align: center;
    }
    li {
      font-weight: 400;
    }
  }
}
@media (max-width: 1439px) {
  .header-container.type14 {
    .top-links-icon {
      display: inline-block;
    }
    .top-links-area .links {
      position: absolute;
      left: 0;
      top: 100%;
      text-align: left;
      padding: 10px 0;
      display: none;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      min-width: 100px;
      li {
        display: block;
        padding: 0 10px;
        font-weight: 400;
        font-size: 11px;
        letter-spacing: 0;
        a {
          color: #000;
        }
      }
    }
  }
}
@media (max-width: 991px){
  .header-container.type14 {
    .header {
      padding: 25px 15px;
    }
    .shop-menu {
      display: none;
    }
    .cart-area {
      right: 20px;
    }
    .search-area {
      margin: 0 5px;
      a.search-icon {
        font-size: 13px;
      }
    }
    .mybag-link i {
      font-size: 16px;
    }
    .icon-cart-header .cart-total span.cart-qty {
      width: 12px;
      height: 12px;
      font-size: 8px;
      line-height: 12px;
    } 
    .menu-icon a, .top-links-icon a,.currency-wrapper > a,.language-wrapper > a,.compare-link a{
      font-size: 10px; 
      font-weight: 600;
    }
  }
}
@media (max-width: 767px) {
  .header-container.type14 {
    .header .sie-logo .logo img {
      height: 30px;
    }
    .switcher-area {
      display: block;
    }
    .top-links-area .links {
      right: 0;
      left: auto;
      z-index: 6;
      a {
        display: inline;
      }
    }
    .search-area.show-icon .search-extended {
      width: 320px;
    }
    .header .custom-block {display: none;}
  }
}