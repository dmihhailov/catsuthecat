.main-container{
  padding-bottom:0;
}
.main-container .main-wrapper{
  padding-bottom:13px;
}
.layout_1024 .main .main-breadcrumbs{
  margin-bottom:0!important;
   margin-left: auto!important;
  margin-right: auto!important;
}
.layout_1024 .main >.container,.layout_1024 .main .product-main .container{
  background-color: #fff;
  padding-top: 13px;
}
.footer-wrapper .container{
  padding-left:30px;
  padding-right:30px;
}
.footer-wrapper .footer-bottom a.footer_bottom_logo{
  margin-right:30px;
}
.footer-wrapper .footer-bottom .custom-block-1{
  margin-left:30px;
}
@media (min-width: 768px){
  .main-breadcrumbs{
    width: 720px;
    max-width: 720px;
    margin: 0 auto;
  }
  .footer-top, .footer-middle, .footer-bottom{
    width:720px;
    margin: 0 auto;
  }
}
@media (min-width: 992px){
  .main-breadcrumbs{
    width: 940px;
    max-width: 940px;
    margin: 0 auto;
  }
  .footer-top, .footer-middle, .footer-bottom{
    width:940px;
    margin: 0 auto;
  }
}
@media (min-width: 1070px){
  .main-breadcrumbs{
    width: 1024px;
    max-width: 1024px;
    margin: 0 auto;
  }
  .layout_1024 .container {
    width: 1054px;
    margin: 0 auto;
  }  
  .layout_1024 .header-container.type10 {
    width: 1024px;
    max-width: 1024px;
    margin: 0px auto;
  } 
  .layout_1024 .header-container.type10 .container{
  	max-width: 100%;
  }
  .layout_1024 .main .main-breadcrumbs .container{
    width:1054px;
    max-width: 1054px;
  }
  .layout_1024 .header-container .search-area .form-search input{
    height:32px;
    box-shadow:none;
    padding: 7px 20px;
  }
  .layout_1024 .header-container .search-area .form-search .search-button{
    height:32px;
    width:35px;
    border-left: 1px solid #ccc;
  }
  .layout_1024 .header-container .search-area .form-search .search-button i{
    margin-left: -8px;
  }
  .header-container .search-area{
    height:34px;
  }
  .layout_1024 .main .container{
    width:1024px;
  }    
  .template-index.layout_1024 .main .container{
    padding:0;
  }
  .footer-top, .footer-middle, .footer-bottom{
    width:1024px;
    max-width: 1024px;
  }
}
@media (max-width: 767px){
  .template-index.layout_1024 .main .container{
    padding:0;
  }
}