.header-container.type24{
  &.sticky-header {
    .main-nav{
      margin: 0 auto; 
      padding: 0 15px;
      ul.top-navigation {
        text-align: left;
        padding-right: 60px;
      }
    }
  }
  &.header-container{
    text-align: left;
    padding: 25px 0;
    border: 0;
  }
  .menu-icon {
    display: none;
    padding: 0;
    margin: 0;
    height: auto;
    margin-right: 1px;
    margin-left: 10px;
    pointer-events: all;
    font-size: 20px;
    text-align: right;
  }
  .site-logo {
    float: left;
    .logo {
      margin: 0 20px 0 0;
      position: relative;
      z-index: 10;
      display: inline-block;
      img{
        max-width: 100%;
      }
    }
  }
  .header-right-area{
    float: right;
    position: relative;
    margin-bottom: 0;
    z-index: 7;
    margin-top: 1px;
    margin-left: 20px;
    >div{
      display: inline-block;
    }
  }
  .custom-block {
    font-family: 'Oswald';
    font-weight: 400;
    display: inline-block;
    text-align: left;
    font-size: 13px;
    height: 33px;
    line-height: 1;
    margin-top: 1px;
  }
  .top-links-area {
    display: inline-block;
    vertical-align: middle;
    float: none;
    margin-top: 2px;
    margin-left: 5px;
  }
  .search-area {
    position: relative; 
    vertical-align: middle;
    margin: 0;
    height: 25px;
    width: 25px;
    line-height: 25px;
    text-align: center;
    margin-left: 8px;
    margin-right: 0;
    left: 0;
    top: 0;
    z-index: 5; 
  }
  .top-links-icon {
    display: inline-block;
    color: #161616;
    &:before {
      content: "\e80b";
      display: block;
      position: absolute;
      right: 7px;
      top: 50%;
      font-family: "porto";
      margin-top: -5px; 
    }
    a {
      font-family: 'Oswald'; 
      font-size: 13px;
      font-weight: 400;
      letter-spacing: 0.025em;
    }
  } 
  .currency-wrapper, .language-wrapper, .compare-link{
    display: inline-block;
    vertical-align: middle;
    float: none;
    margin-right: 0;
    margin-top: 0px;
    > a {      
      font-family: 'Oswald';
      font-size: 13px;
      font-weight: 400;
      letter-spacing: 0.025em; 
      padding-left: 5px;
    }
  } 
  .mini-cart {
    position: relative;
    margin: 0;
    display: inline-block;
    vertical-align: middle;
    left: 0;
    top: 0;
    margin-left: 5px;
    .icon-cart-header{
      position: relative;
      padding: 0 19px 0 0;
      line-height: 37px; 
    } 
  }
  .main-nav{
    margin: 0; 
    > .container {
      width: auto!important;
      padding: 0;
    }
    > .main-top-nav{
      background-color: transparent;
      padding: 0 35% 0 20px;
      text-align: right;
    }
    ul.top-navigation{ 
      >li{
        >a{ 
          letter-spacing: 0.01em; 
          padding: 10px; 
          padding-top: 15px;
          padding-bottom: 16px;
        }
        &.parent {
          > a {
            padding-right: 25px;
            &:after {
              right: 8px;
            }
            &:before{              
              content: "";
              width: 10px;
              height: 10px;
              border: 7px solid transparent;
              border-bottom-color: #fff;
              position: absolute;
              left: 50%;
              margin-left: -8px;
              top: 100%;
              margin-top: -14px;
              visibility: hidden;
              opacity: 0;
              transition: all 0.1s;
            }

          }
          &:hover > a:before{
            visibility: visible;
            opacity: 1;
          }
        }
        &:hover {
          background-color: transparent;
          >a {
            color: #777;
          }
        }
        &.level0{
          ul li.groups{
            > a{
              font-size: 13px;
              font-weight: 700;
              margin-top: 26px;
              margin-bottom: 9px;
              line-height: 1.5;
              text-transform: uppercase;
            }
            .menu-wrapper{
              ul.level1{
                li.level2{
                  > a{
                    float: left;
                    padding: 5px;
                    margin: 0 8px 0 8px;
                    font-size: 12px;
                    font-weight: 600;
                    line-height: 24px;
                    text-transform: uppercase;
                    span{
                      float: none;
                      line-height: 24px;
                    }
                  }
                }
              }
            }  
          }
        }
        &.static-dropdown{
          > a:before{
            content: "";
            width: 10px;
            height: 10px;
            border: 7px solid transparent;
            border-bottom-color: #fff;
            position: absolute;
            left: 50%;
            margin-left: -8px;
            top: 100%;
            margin-top: -14px;
            visibility: hidden;
            opacity: 0;
            transition: all 0.1s;
          }
          &:hover > a:before{
            visibility: visible;
            opacity: 1;
          }
        }
      }
    }
  }
}
@media(max-width: 991px){
  .header-container.type24.header-container{
    padding: 15px 0; 	
  }
  .header-container.type24 .menu-icon {
    display: inline-block;
    float: left;
    position: relative;
    margin-right: 18px;
    z-index: 12;
    margin-top: 10px; 
  }
  .header-container.type24 .header-right-area, .header-container.type24 .top-links-area {
    margin-left: 0;
  }
  .header-container.type24 .header .custom-block {
    display: none;
  }
  .header-container.type24 .search-area.show-icon .search-extended {
    right: -80px;
    width: 350px;
    &:before {right: 80px;}
  } 
}