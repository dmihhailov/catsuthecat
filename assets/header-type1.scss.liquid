.header-container.type1{
  background-color: #1e1e1e;
  border: 0;
  &.sticky-header {
    .header-wrapper {
      background-color: #1e1e1e;
      margin:0;
      .main-nav.container {
        margin: 0 auto;
        padding: 0 15px;
      }
      .main-nav > .container {
        width: auto!important;
        padding: 0;
      }
      .main-nav {
        .main-top-nav {
          background-color: transparent;
        }
      }
    }
  }
  .site-logo { 
    float: left; 
    .logo {
      margin: 20px 25px 25px 0;
    }
  } 
  .header-wrapper {
    border: 0;
    display: block;
    margin: 32px 0 0; 
  } 
  .main-nav {
    margin: 0;
    .main-top-nav {
      background-color: transparent;
    }
    ul.top-navigation {
      >li{
        >a {
          color: #fff;
          padding: 10px;
          font-weight: 600;
          position: relative;
          z-index: 1; 
        }
        &.parent {
          >a {
            padding-right: 25px;
            &:after {
              right: 8px;
            }
          }
        }
      }
    }
  }  
  .header-right-area {
    text-align: right;
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -32px;
    z-index:1;
    >div:first-child {
      margin-bottom: 10px;
    }
  }
  .top-links-icon {
    background-color: #101010;
    border-radius: 2px;
    color: #fff;
  }
  .links {
    display: inline-block;
    vertical-align: middle;
    float: none;
    margin: 3px 0;
    margin-right: 5px;
    li {
      font-weight: 300;
      padding: 0 12px;
      border: 0;
      border-right: 1px solid #101010;
    }
    a {
      color: #fff;
    }
  }
  .top-links-area {
    display: inline-block;
    vertical-align: middle;
    float: none;
  }
  .search-area {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    margin: 0;
    height: 25px;
    width: 25px;
    line-height: 25px;
    text-align: center;
    margin-left: 10px;
    left: 0;
    top: 0;
    z-index: 5;
    >a {
      color: #fff;
    } 
    &.show-icon-tablet .search-extended {
      right: -20px;
      &:before {
        right: 19px;
      }
    }
  }
  .menu-icon {
    display: none;
    padding: 0;
    margin: 0;
    height: auto;
    margin-right: 1px;
    margin-left: 10px;
    a {
      color: #fff;
    }
  }
  .currency-wrapper, .language-wrapper, .compare-link {
    display: inline-block;
    vertical-align: middle;
    float: none;
    margin-right: 4px;
    border-radius: 3px;
    > a { 
      border-color: #101010;
      background-color: #101010;
      color: #fff;
      text-align: center; 
      border-radius: 3px;
    }
  }
  .split {
    display: none;
  } 
  .mini-cart {
    position: relative;
    top: 0;
    right: 0;
    display: inline-block;
    vertical-align: middle;
    margin: 0;
    width: auto; 
    .icon-cart-header {
      background-color: #010101;
    }
  } 
}  
@media (max-width: 991px){ 
  .header-container.type1 .header-wrapper {
    display: none;
  }  
}