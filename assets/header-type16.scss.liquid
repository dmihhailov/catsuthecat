.header-container.type16{
  position: absolute;
  width: 100%;
  background-color: transparent;
  border: 0;
  z-index: 4;
  border-bottom: 1px solid rgba(60,60,60,0.1); 
  min-height: 106px;
  .template-index & { 
    position: absolute;
    background-color: transparent;
    width: 100%;
    top: 0;
    left: 0; 
  }
  &.sticky-header{ 
    .main-nav{
      &.container{
        margin:0 auto;               
        >.container{
          position: relative;
          padding:0 15px !important;
        }
      }  
      .mini-cart{
        top:0; 
        .cart-container{
          a{
            .icon-mini-cart{
              &:before{
                content: '\e878';
              }
            }
          }
        } 
        .cart-wrapper{
          top:43px;
          &:before{
            right:22px;
          }
        }
      }
    }
  }
  .header{
    .site-logo{  
      display:table-cell;
      vertical-align:middle;
      padding-right: 10px;
      .logo { 
        margin: 27px 0;
        img{
          max-width:100%;
        }
      }
    }
    .header-right-area{
      display: table;  
      border-right: 1px solid rgba(60,60,60,0.1);
      .header-link-area{ 
        display:table-cell;
        width: 1%;
        white-space: nowrap;
        border: 1px solid rgba(60,60,60,0.1);
        border-bottom-width: 0;
        border-top-width: 0; 
        vertical-align:middle;
      }
      .switcher-area{
        display:table-cell;
        width: 270px; 
        vertical-align:middle;
        white-space: nowrap;
      }
    }
  }
  .top-links-area{
    width: 100%;
    padding: 16px 0;
    border-bottom: 1px solid rgba(60,60,60,0.1);
    height: 53px;
    .links{
      margin: 0 16px 0 0;
      li{
        padding: 0 10px;
        border: 0;
        &:first-child{
          padding-left: 0;
        }
        a{ 
          font-size: 13px;
          font-family: "Oswald";
          font-weight: 400;
          letter-spacing: 1px;
          &:hover{
            text-decoration: none; 
          }
        }
      }
    }
  }
  .main-link{
    float: right;
    height: 52px;
    .header-wrapper{
      width: 100%;
      border: 0;
      display: block;
      padding: 11.5px 0 11.5px 10px;
      margin-top: -1px;
      .main-nav{
        height: 30px;
        position: static;
        texxt-align:right;
        .container{
          width: auto;
          padding: 0;
          .main-top-nav{
            position:static;
            .main-navigation{
              position:static;
              ul.top-navigation{
                >li{
                  >a{
                    padding: 9px 15px; 
                    letter-spacing: 1px;                            
                  }                       
                  .menu-wrap-sub:not(.dropdown){
                    margin-top: 9px;
                    padding: 25px;
                    &:before{
                      content: "";
                      display: block;
                      position: absolute;
                      left: 0;
                      right: 0;
                      height: 20px;
                      top: -20px;
                    }
                    .mega-columns.row{
                      margin:0 -15px;
                      li.groups{
                        width:25%;
                        .banner-sub-top{
                          padding: 0;
                          margin: 0;
                          img{
                            width:100%;
                          }                                
                        }
                        .menu-wrapper {
                          display:inline-block;
                          margin:5px 0;
                        }
                        >a{
                          padding: 0;
                          margin: 0;
                          font-size: 20px;
                          font-weight: 300;
                          text-decoration: none;
                          font-family: "Oswald";
                          letter-spacing: 0.05em;
                          padding-bottom: 7px;
                          margin-bottom: 20px;
                          margin-left: 0;
                          margin-right: 0;
                          color: #fff;
                          position: absolute;
                          top: 50px;
                          left: 20px;
                          text-align: center;
                          float: none;
                          right: 20px;
                          display: block;
                        }                              
                        li{
                          a{
                            font-size: 15px;
                            padding: 10px 0 10px 20px;
                            margin-left: 0;
                            margin-right: 0;
                          }
                        }
                      }
                    }
                  }
                  .dropdown { 
                    border: 0;
                    margin-top: 9px;
                    .menu-wrap-sub {
                      margin-top: 0;
                      padding: 5px 0;
                    }
                    &:before{
                      content: "";
                      display: block;
                      position: absolute;
                      left: 0;
                      right: 0;
                      height: 20px;
                      top: -20px;
                    }
                  }
                  &.parent{
                    >a{
                      padding-right:28px;
                      &:after{
                        right: 12px;
                      }
                      &:before{
                        content: "";
                        width: 10px;
                        height: 10px;
                        border: 8px solid transparent;
                        border-bottom-color: #fff;
                        position: absolute;
                        left: 50%;
                        margin-left: -10px;
                        top: 100%;
                        margin-top: -6px;
                        visibility: hidden;
                        opacity: 0;
                        transition: all 0.1s;
                      }
                    }
                    &:hover{
                      a{
                        &:before{
                          visibility: visible;
                          opacity: 1;
                          margin-top: -7px;
                        }
                      }
                    }
                  }
                } 
              }
            }
          }
        }
      }
    }
  }
  .search-area{
    position: relative;
    width: 100%;
    height: auto;
    border-bottom: 1px solid rgba(60,60,60,0.1);
    top: 0;
    left: 0;
    margin: 0;
    z-index: 2;
    a.search-icon{
      display:none;
    }
    .search-extended {
      width: 100%;
      min-width: 100%;
      .searchform input[type=text] { 
        height: 50px;
        text-transform: uppercase;
        font-size: 13px;
        font-family: "Oswald"; 
        letter-spacing: 0.03em;
      } 
      .input-dropdown-inner {
        height: 50px;
        line-height: 50px;
        a {
          font-size: 13px;
          font-family: "Oswald"; 
          letter-spacing: 0.03em;
          text-transform: uppercase;
        }
      }
    }
  }
  .cart-area{         
    position: relative;
    right: auto;
    left: auto;
    margin: 0;
    width: 100%;
    height: auto;
    display:table;
    .currency-wrapper,.language-wrapper{
      height: 52px;
      border-right: 1px solid rgba(60,60,60,0.1);
      margin: 0;
      display:table-cell;
      vertical-align: middle;
      float:none;
      > a{
        border: 0;
        line-height: 52px;
        height: auto;
        padding: 0 25px 0 15px;
        float: left;
        .current-currency,.current-language{
          font-size: 14px;
          font-family: "Oswald";
          font-weight: 400;
          line-height: 52px;
          text-transform: uppercase;
          letter-spacing: 0.03em;
        }
        i{
          margin: 0;
          font-size: 14px;
          right:5px;
        }   
        &:hover{
          text-decoration:none;
        }
      }
    }
    .currency-wrapper{            
    }
    .language-wrapper{}
    .setting-currency,.select-language{
      border: 0;
      padding: 16px 0;
      min-width: 78px;
      overflow: inherit !important;
      padding: 20px 0;
      box-shadow: 0 1px 2px rgba(0,0,0,0.1);
      left:0;
      top:53px;
      &:before{
        content: "";
        display: block;
        width: 10px;
        height: 10px;
        border: 8px solid transparent;
        border-bottom-color: #fff;
        position: absolute;
        top: -15px;
        left: calc(50% - 10px);
      }
      li{
        padding: 10px 9px 10px 20px;
        a{
          color: #696969 !important;
          font-family: "Oswald";
          font-size: 15px;
          font-weight: 400;
          letter-spacing: 0.005em;
          padding:0;
        }
      }
    }          
  }
  .mini-cart{
    position: relative;
    right: auto;
    margin: 0;
    top: auto; 
    height: 52px; 
    display:table-cell;
    vertical-align: middle;
    text-align: center;
    .cart-wrapper{
      box-shadow: 0 1px 2px rgba(0,0,0,0.2);
      margin-top: 0px;
      border-top:0;
      width:330px;
      &:before{
        top:-20px;
        right:40px;
        border-bottom-color:#fff!important;
      }
      .cart-content{
        ul{
          padding: 10px 30px;
          li.item-cart{
            padding: 26px 0;
            border-bottom-color: #e9e9e9;
            .product-image{
              width:60px;
            }
            .product-details{
              margin-left: 79px;
              .product-name{
                margin: 1px 0;
                a{
                  font-size: 15px;
                  letter-spacing: 0.005em;
                  color: #21293c;
                }
              }
              .items{
                font-size: 15px;
                color: #8f8f8f;
              }
            }
          }
        }
      }
      .cart-checkout{
        .cart-info{
          .subtotal{
            padding: 10px 30px;
            width: 100%;
            float: left;
            text-align:left;
            .label{
              text-transform: uppercase;
              color: #21293c;
              letter-spacing: 0.01em;
              font-size: 15px;
              font-weight: 600;
            }
            .price{
              font-size: 17px;
              color: #918c69;
              font-weight: 600;
            }
          }
        }
        .actions{
          width: 100%;
          float: left;
          padding: 10px 30px;
          a{
            text-transform: uppercase;
            font-family: "Oswald";
            font-size: 14.93px;
            letter-spacing: 0.05em;                    
            background-color: #e1ddc3;
            border: solid 2px #e1ddc3;
            border-radius: 0;
            box-shadow: none;
            padding: 7px 12px;
            display:inline-block;
            span{
              color: #61605a;
            }
            &.view-cart{
              float:left;
            }
            &.checkout-cart{
              float:right;
              background: transparent;
            }
          }

        }
      }
    }
  }
  &:not(.sticky-header) {
    a.icon-cart-header{
      margin: 0 -10px;
      height: 52px;
      i {line-height: 49px;}
      .cart-total{
        padding: 0 5px;
        span{
          font-family: "Oswald";
          font-size: 15px; 
          &.cart-qty{ 
            font-family: "Poppins"; 
            top: 10px;
            left: 27px;
          }
        }
      }
    }
  }
}
@media (max-width: 991px){ 
  .header-container.type16 .menu-icon{
    display: block;
    height: auto;
    padding: 0;
    margin: 15px 10px;
    float: right;
  }
  .header-container.type16 .header .header-right-area .header-link-area .main-link .header-wrapper{
  	display:none;
  }
  .main-section-header .header-container.type16 .top-links-icon{
  	display: inline-block;
    float: right;
    color: #e1ddc3;
  }
  .header-container.type16 .header .header-right-area .header-link-area .top-links-area .links{
    display: none;
    position: absolute;
    right: 0;
    z-index: 9;
    min-width: 115px;
    background-color: #fff!important;
    border-radius: 3px;
    margin: 0;
    padding: 5px 0;
    text-align: right;
    border: 1px solid #ccc;
    top: 100%;
  }
  .header-container.type16 .header .header-right-area .header-link-area .top-links-area .links li{
    display: block;
  }
  .header-container.type16 .header .header-right-area .header-link-area .top-links-area .links li:first-child{
    padding-left: 0;
  }
  .header-container.type16 .header .header-right-area .header-link-area .top-links-area .links li a:hover{
  	color:#c0bebb;
  }
}
@media (max-width: 480px){
  .header-container.type16 .header .site-logo .logo img {max-width: 65px !important;}
  .header-container.type16 .header .header-right-area .switcher-area .cart-area .mini-cart a.icon-cart-header .cart-total span:last-child{
    display:none;
  } 
}